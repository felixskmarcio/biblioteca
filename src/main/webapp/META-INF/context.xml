<?xml version="1.0" encoding="UTF-8"?>
<Context>
    <!-- Configura o workDir para garantir que o Tomcat possa compilar os JSPs corretamente -->
    <JarScanner>
        <JarScanFilter defaultPluggabilityScan="false" />
    </JarScanner>
    
    <!-- Desativar cache de recursos para desenvolvimento -->
    <Resources cachingAllowed="false" />
</Context> 